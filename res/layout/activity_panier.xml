<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/panierTVVotrePanier"
        android:text="Contenu de votre panier:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/panierLVPanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panierTVVotrePanier"/>

    <TextView
        android:id="@+id/panierTVPrixTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panierLVPanier"/>

</RelativeLayout>