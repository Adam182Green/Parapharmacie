<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/panierTVVotrePanier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:text="Contenu de votre panier :"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp" />

    <ListView
        android:id="@+id/panierLVPanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/panierTVVotrePanier"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:headerDividersEnabled="false" />

    <TextView
        android:id="@+id/panierTVPrixTotal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/panierLVPanier"
        android:gravity="center_horizontal" />

</RelativeLayout>