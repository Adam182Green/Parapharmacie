<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/produitLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/produitTVLibelleProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/produitTVPrixUnitaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"/>


    </LinearLayout>

    <ListView
        android:id="@+id/produitLVComposants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/produitLinearLayout"/>

    <Button
        android:id="@+id/produitBAjouterAuPanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/produitLVComposants"
        android:hint="Ajouter au panier"/>

</RelativeLayout>